<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>conexao</filter-name>
        <filter-class>br.grupointegrado.ads.trabalhoWebAPS.filtros.conexao</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>conexao</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>anunciarServlet</servlet-name>
        <servlet-class>br.grupointegrado.ads.trabalhoWebAPS.servlet.anunciarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>anuncioServlet</servlet-name>
        <servlet-class>br.grupointegrado.ads.trabalhoWebAPS.servlet.anuncioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contatoServlet</servlet-name>
        <servlet-class>br.grupointegrado.ads.trabalhoWebAPS.servlet.contatoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>indexServlet</servlet-name>
        <servlet-class>br.grupointegrado.ads.trabalhoWebAPS.servlet.indexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImagemServlet</servlet-name>
        <servlet-class>br.grupointegrado.ads.trabalhoWebAPS.servlet.ImagemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>anunciarServlet</servlet-name>
        <url-pattern>/anunciar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>anuncioServlet</servlet-name>
        <url-pattern>/anuncio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contatoServlet</servlet-name>
        <url-pattern>/contato</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>indexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImagemServlet</servlet-name>
        <url-pattern>/imagem</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
